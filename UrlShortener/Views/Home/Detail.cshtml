@model UrlShortener.Models.Bookmark

<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url(/img/home-bg.jpg)">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>@Model.Owner</h1>
                    <hr class="small">
                    <span class="subheading">Liked Bookmarks</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12 text-center">
                @if (ViewBag.isLiked)
                {
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><a href="b/@Model.ShortUrl">@Model.Title</a></h3>
                        </div>
                        <div class="panel-body">@Model.Description</div>
                    </div>
                }
                else
                {
                    <h4>You currently have no likes.</h4>
                }
            </div>
        </div>
    </div>
</div>
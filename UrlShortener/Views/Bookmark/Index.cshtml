@model IEnumerable<UrlShortener.Models.Bookmark>

<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url(/img/home-bg.jpg)">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Bookmarks</h1>
                    <hr class="small">
                    <span class="subheading">List of User Bookmarks</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    @Html.ActionLink("Create a Bookmark", "Create", "Bookmark", new { @class = "btn btn-primary" })
    <hr />
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LongUrl)
            </th>
        </tr>

        @foreach (var bookmark in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => bookmark.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => bookmark.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => bookmark.LongUrl)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = bookmark.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = bookmark.Id })
                </td>
            </tr>
        }
    </table>
</div>